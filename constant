using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace constant
{
    class Program
    {
        static void Main(string[] args)
        {
            double r,area;
            const double pi = 3.142;
            Console.WriteLine("Enter radius");
            r = Convert.ToDouble(Console.ReadLine());

            // area of circle

            area = pi * r * r;
            Console.WriteLine("{0} is your radius and {1} is your area", r, area);
            Console.ReadKey();


        }
    }
}
